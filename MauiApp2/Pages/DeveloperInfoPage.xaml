<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.Pages.DeveloperInfoPage"
             Title="DeveloperInfoPage">

    <StackLayout Padding="20" BackgroundColor="White">
        <Label Text="Про розробника"
           FontSize="24"
           FontAttributes="Bold"
           HorizontalOptions="Center" />

        <Image Source="developer_image.jpg"
           Aspect="AspectFit"
           HeightRequest="200"
           HorizontalOptions="Center" />

        <Label Text="Студент 4 курсу факультету комп’ютерних наук та кібернетики Остренко Олександр"
           FontSize="14"
           Margin="0,10,0,0"
           HorizontalOptions="Center" />

        <Button Text="OK"
            HorizontalOptions="Center"
            Clicked="OnCloseButtonClicked" />
    </StackLayout>
</ContentPage>